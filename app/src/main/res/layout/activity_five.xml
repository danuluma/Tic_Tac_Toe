<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoPlayers">

    <LinearLayout
        android:id="@+id/llnames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llPlayer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/llPlayer2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvPlayer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"

                android:text="Please Enter Player 1 Name" />

            <EditText
                android:id="@+id/etPlayer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPlayer1"
                android:layout_margin="16dp"
                tools:text="JOHN" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llPlayer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvPlayer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"

                android:text="Please Enter Player 2 Name" />

            <EditText
                android:id="@+id/etPlayer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPlayer1"
                android:layout_margin="16dp"
                tools:text="JOHN" />
        </LinearLayout>

    </LinearLayout>


    <TableLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btStart"
        android:layout_below="@id/llSwap"
        android:layout_margin="8dp"
        android:layout_alignParentStart="true"
        android:columnCount="5"
        android:rowCount="5"
        android:textStyle="bold"
        android:textSize="24dp">

        <TableRow
            android:id="@+id/tr1"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toRightOf="@+id/button1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />
        </TableRow>


        <TableRow
            android:id="@+id/tr2"
            android:layout_height="0dp"
            android:layout_below="@+id/tr1"
            android:layout_weight="1">

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toRightOf="@+id/button1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />
        </TableRow>


        <TableRow
            android:id="@+id/tr3"
            android:layout_height="0dp"
            android:layout_below="@+id/tr2"
            android:layout_weight="1">

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toRightOf="@+id/button1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

        </TableRow>


        <TableRow
            android:id="@+id/tr4"
            android:layout_height="0dp"
            android:layout_below="@+id/tr3"
            android:layout_weight="1">

            <Button
                android:id="@+id/button16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toRightOf="@+id/button1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button19"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:id="@+id/tr5"
            android:layout_height="0dp"
            android:layout_below="@+id/tr4"
            android:layout_weight="1">

            <Button
                android:id="@+id/button21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toRightOf="@+id/button1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

        </TableRow>

    </TableLayout>







    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="TextView"
        android:visibility="gone" />

    <Button
        android:id="@+id/btStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/tvPlayer1Name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Player 1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPlayer2Name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvPlayer1Name"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        android:text="Player 2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPlayer1Score"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvPlayer1Name"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Player 1 Score"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPlayer2Score"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/tvPlayer2Name"
        android:layout_alignTop="@+id/tvPlayer1Score"
        android:gravity="center"
        android:text="Player 2 Score"
        android:visibility="gone" />

    <TextView

        android:id="@+id/tvDraw"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tvPlayer1Name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDrawScore"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/tvPlayer1Score"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="TextView"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llSwap"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_above="@id/tlmain"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="143dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvP1id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="X"
            android:textStyle="bold"
            android:textSize="24dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/tvInvert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_swap_horiz_black_24dp"
            android:clickable="true"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvP2id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="0"
            android:textSize="24dp"
            android:textStyle="bold"
            android:visibility="visible" />


    </LinearLayout>

    <TextView

        android:id="@+id/tvTurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tlmain"
        android:layout_below="@id/tvDrawScore"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView"
        android:visibility="gone" />


</RelativeLayout>